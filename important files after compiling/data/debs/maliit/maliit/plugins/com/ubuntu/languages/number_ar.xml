        </key>
        <key>
          <binding label="٨" />
        </key>
        <key>
          <binding label="٩" />
        </key>
      </row>
      <row>
        <key>
          <binding action="plus_minus_toggle" label="+/-" />
        </key>
        <key>
          <binding label="٠" />
        </key>
        <key>
          <binding action="decimal_separator" />
