        <key>
          <binding label="٧" />
        </key>
        <key>
          <binding label="٨" />
        </key>
        <key>
          <binding label="٩" />
        </key>
        <key>
          <binding label="٠" />
        </key>
      </row>
      <row>
        <spacer />
        <key width="large">
          <binding action="plus_minus_toggle" label="+/-" />
        </key>
        <key width="large">
          <binding action="decimal_separator" />
        </key>
        <key rtl="true" style="special" width="large">
          <binding action="backspace" label="" />
        </key>
        <key id="actionKey" style="special" width="large">
          <binding action="return" />
        </key>
      </row>
    </section>
  </layout>
